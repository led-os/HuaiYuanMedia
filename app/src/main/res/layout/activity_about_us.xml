<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/common_bg"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_47"
        android:src="@mipmap/img_logo" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tvAppVersion"
        style="@style/TextGrayColor99999Sp12Style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12" />

    <LinearLayout
        android:id="@+id/btnCheckVersion"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_26"
        android:paddingLeft="@dimen/dp_26"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_26"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="版本更新"
            android:textColor="@color/default_black_text_color"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tvVersionStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/icon_mini_right"
            android:gravity="center_vertical"
            android:text="已是最新版本"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/default_gray_text_color"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>



    <ImageView
        android:id="@+id/ivCode"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        style="@style/TextGrayColor99999Sp12Style"
        android:layout_gravity="center_horizontal"
        android:text="怀远发布 版权所有" />

    <TextView
        style="@style/TextGrayColor99999Sp12Style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="CopyRight@2019.All Rights Reserved" />


</LinearLayout>