<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <cn.tklvyou.huaiyuanmedia.ui.video_edit.localEdit.VideoPreviewView
        android:id="@+id/mLocalVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/mBtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_color_accent_radius_5_bg"
        android:clickable="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/mBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/icon_titlebar_back" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mBtnCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/bt_cover"
            android:padding="@dimen/dp_15"
            android:shadowColor="@color/black_50"
            android:shadowDx="0"
            android:drawablePadding="@dimen/dp_5"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="选封面"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mBtnCut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/btn_cut"
            android:padding="@dimen/dp_15"
            android:shadowColor="@color/black_50"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:drawablePadding="@dimen/dp_5"
            android:text="视频裁剪"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <include layout="@layout/pop_video_loading" />

</RelativeLayout>

