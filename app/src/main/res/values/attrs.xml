<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchView">
        <attr name="bgColor" format="color|reference" />
        <attr name="leftColor" format="color|reference" />
        <attr name="rightColor" format="color|reference" />
        <attr name="textLeftColor" format="color" />
        <attr name="textRightColor" format="color" />
        <attr name="textLeftClickColor" format="color" />
        <attr name="textRightClickColor" format="color" />
        <attr name="textLeft" format="string" />
        <attr name="textRight" format="string" />
        <attr name="setChecked" format="boolean" />
        <attr name="padding" format="dimension" />
        <attr name="time" format="integer" />
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FrameLayout4Loading">
        <attr name="filterable" format="boolean" />
        <attr name="loadingView" format="reference" />
        <attr name="defaultExceptionView" format="reference" />
        <attr name="defaultNetworkExceptionView" format="reference" />
        <attr name="defaultDataExceptionnView" format="reference" />
        <attr name="noNetworkView" format="reference" />
        <attr name="timeoutView" format="reference" />
        <attr name="noDataView" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer" />
    </declare-styleable>


    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color" />
        <attr name="item_selector_color" format="color" />
    </declare-styleable>

    <declare-styleable name="DYLoadingView">
        <attr name="radius1" format="dimension" />
        <attr name="radius2" format="dimension" />
        <attr name="rtlScale" format="float" />
        <attr name="ltrScale" format="float" />
        <attr name="color1" format="color" />
        <attr name="color2" format="color" />
        <attr name="mixColor" format="color" />
        <attr name="duration" format="integer" />
        <attr name="pauseDuration" format="integer" />
        <attr name="gap" format="dimension" />
        <attr name="scaleStartFraction" format="float" />
        <attr name="scaleEndFraction" format="float" />
    </declare-styleable>

    <!--显示提示的View-->
    <declare-styleable name="TipView">
        <attr name="tipBackgroundColor" format="color" />
        <attr name="tipTextColor" format="color" />
        <attr name="tipText" format="string" />
        <attr name="tipTextSize" format="dimension" />
    </declare-styleable>

    <!--ImageView 扩展-->
    <declare-styleable name="ImageViewExt">
        <attr name="ive_scale_type_matrix_ext" format="enum">
            <enum name="left_crop" value="1" />
            <enum name="right_crop" value="2" />
            <enum name="center_crop" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level" value="1" />
        </attr>

        <attr name="lockEdge" format="boolean" />
        <attr name="flingVelocity" format="integer" />
        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

</resources>